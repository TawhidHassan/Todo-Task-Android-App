<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/bgitemdoes"
    android:layout_marginBottom="20dp"
    >

    <LinearLayout android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >

      <TextView android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="Buy whiskas"
          android:textColor="#000C5D"
          android:textSize="22sp"
          android:layout_marginTop="19dp"
          android:maxLength="30"
          android:id="@+id/titledoes"/>

      <TextView android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="Nearly market good to"
          android:textColor="#ADADAD"
          android:textSize="18sp"
          android:layout_marginTop="8dp"
          android:maxLength="30"
          android:id="@+id/descodes"/>

    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="125dp"
        android:layout_marginTop="30dp">

       <TextView android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:text="Tomorrow"
           android:textColor="#F63EA5"
           android:textSize="18sp"
           android:layout_marginTop="8dp"
           android:id="@+id/datedoes"
           android:gravity="right"/>

   </LinearLayout>

</LinearLayout>